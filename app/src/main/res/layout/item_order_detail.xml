<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_order_detail_img"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:src="@mipmap/i7plus_home"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_order_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_15"
                android:layout_marginTop="@dimen/dp_40"
                android:textColor="@color/black_222833"/>
            <TextView
                android:id="@+id/item_order_detail_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_8"
                android:textColor="@color/color_999999"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_222833"
                    android:textSize="@dimen/font_8"
                    android:text="现售价："/>
                <TextView
                    android:id="@+id/item_order_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_222833"
                    android:textSize="@dimen/font_15"
                    android:text="249"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_222833"
                    android:textSize="@dimen/font_8"
                    android:text="/副"/>
                <TextView
                    android:id="@+id/item_order_detail_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="1件"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <TextView
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/order_gray_bg"
            android:layout_marginRight="@dimen/dp_15"
            android:clickable="true"
            android:textSize="@dimen/font_11"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/gray_color_press"
            android:text="评价订单" />
    </LinearLayout>
</LinearLayout>