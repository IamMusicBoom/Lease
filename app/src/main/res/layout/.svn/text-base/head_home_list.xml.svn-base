<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:recyclerView="http://schemas.android.com/tools">


                <LinearLayout  xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">
                    <!--Banner 开始-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/color_title">
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:focusable="true"
                                android:clickable="true"
                                >
                            </LinearLayout>
                        </LinearLayout>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:clipChildren="false"
                                android:layout_centerInParent="true"
                                android:layerType="software"
                                android:background="#00000000"
                                >
                                <com.tylx.leasephone.home_view_pager.AutoPlayViewPager
                                    android:id="@+id/view_pager"
                                    android:layout_width="match_parent"
                                    android:layout_marginLeft="35dp"
                                    android:layout_marginRight="35dp"
                                    android:layout_height="wrap_content" />
                                <RadioGroup
                                    android:id="@+id/point_group"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="bottom"
                                    android:gravity="center">
                                </RadioGroup>
                            </FrameLayout>
                    </RelativeLayout>
                    <!--Banner 结尾-->

                    <!--手机租赁，电脑租赁 开始-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_15">
                        <android.support.v7.widget.CardView
                            android:id="@+id/phone_card"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/dp_100"
                            app:cardUseCompatPadding="true"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_marginRight="@dimen/dp_7"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardElevation="@dimen/dp_3"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="手机租赁"
                                    android:drawablePadding="@dimen/dp_10"
                                    android:drawableTop="@mipmap/phone_tab"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:id="@+id/computer_card"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/dp_100"
                            app:cardUseCompatPadding="true"
                            android:layout_marginLeft="@dimen/dp_7"
                            android:focusable="true"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardElevation="@dimen/dp_3"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="其他租赁"
                                    android:drawablePadding="@dimen/dp_10"
                                    android:drawableTop="@mipmap/computer_tab"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <!--手机租赁，电脑租赁结尾-->
                </LinearLayout>
</layout>