<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Title 开始-->
        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/status_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statuabarheight"
                android:background="@color/theme_color"
                android:orientation="vertical"
                android:visibility="gone"></LinearLayout>
            <RelativeLayout
                android:id="@+id/layoutbar"
                style="@style/navbar_stylew"
                >
                <ImageView
                    android:id="@+id/nav_bar_back"
                    style="@style/nav_bar_back_style"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/menu"
                    />
                <TextView
                    android:id="@+id/nav_bar_lefttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:paddingRight="5dp"
                    android:maxLines="1"
                    android:text="@string/title_tv_left"
                    android:textColor="@color/gray_474747"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="@string/title_tv_left"
                    tools:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_alignEnd="@+id/nav_bar_back" />
                <TextView
                    android:id="@+id/nav_bar_title"
                    style="@style/title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:ellipsize="end"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textColor="@color/gray_474747" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_margin="@dimen/dp_5"
                    android:text="99+"
                    android:textSize="@dimen/dp_8"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/red_circle"/>
                <ImageView
                    android:id="@+id/nav_bar_right"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_img"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:visibility="visible"
                    android:src="@mipmap/cart"
                    />
                <TextView
                    android:id="@+id/nav_bar_righttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="8dp"
                    android:maxLines="1"
                    android:text="@string/title_tv_right"
                    android:textColor="@color/gray_474747"
                    android:textSize="@dimen/title"
                    android:visibility="gone"
                    tools:text="@string/title_tv_right" />
            </RelativeLayout>
        </LinearLayout>
        <!--Title 结尾-->
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swiprefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <!--Banner 开始-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:background="@color/color_title">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:focusable="true"
                            android:clickable="true"
                            >
                        </LinearLayout>
                    </LinearLayout>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardUseCompatPadding="true"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_marginRight="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="@dimen/dp_5"
                        >
                        <com.bigkoo.convenientbanner.ConvenientBanner
                            android:id="@+id/ad_banner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:canLoop="true"
                            >
                        </com.bigkoo.convenientbanner.ConvenientBanner>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
                <!--Banner 结尾-->

                <!--手机租赁，电脑租赁 开始-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_15">
                    <android.support.v7.widget.CardView
                        android:id="@+id/phone_card"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/dp_100"
                        app:cardUseCompatPadding="true"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_marginRight="@dimen/dp_7"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="@dimen/dp_5"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="手机租赁"
                                android:drawablePadding="@dimen/dp_10"
                                android:drawableTop="@mipmap/phone_tab"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/computer_card"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/dp_100"
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="@dimen/dp_5"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="其他租赁"
                                android:drawablePadding="@dimen/dp_10"
                                android:drawableTop="@mipmap/computer_tab"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <!--手机租赁，电脑租赁结尾-->

                <com.tylx.leasephone.view.MyRecyclerView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:divider="@null"
                    android:focusable="false"
                    android:background="@color/white">
                </com.tylx.leasephone.view.MyRecyclerView>
            </LinearLayout>
        </ScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

</layout>