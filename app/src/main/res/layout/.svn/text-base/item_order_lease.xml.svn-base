<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.tylx.leasephone.model.OrderModel.GoodsBean"/>
        <import type="com.tylx.leasephone.R"/>
        <import type="com.tylx.leasephone.model.GoodsModel"/>
    </data>

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                </LinearLayout>
                <!--<android.support.v7.widget.CardView-->
                    <!--android:id="@+id/phone_card"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:clickable="true"-->
                    <!--android:focusable="true"-->
                    <!--android:foreground="?android:attr/selectableItemBackground"-->
                    <!--app:cardElevation="@dimen/dp_3"-->
                    <!--app:cardUseCompatPadding="true"-->
                    <!--&gt;-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="@dimen/dp_15"
                            >
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="产品名字"
                                android:text="@{model.goodsName}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_15" />
                                <TextView
                                    android:id="@+id/tv_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="申请失败"
                                    android:hint="申请失败"
                                    android:visibility="gone"
                                    android:padding="@dimen/dp_10"
                                    android:textColor="@color/red_cc0115"
                                    android:textSize="@dimen/font_11" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/style_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{GoodsModel.formateSpecifications(model.commondityNorm)}"
                                android:hint="产品型号"
                                android:textSize="@dimen/font_8" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/now_tip"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="bottom"
                                        android:text=""
                                        android:hint="现价"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_10" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/be_tip"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/font_10"
                                            android:hint="原价"
                                            />
                                        <ImageView
                                            android:id="@+id/line"
                                            style="@style/horizontal_line"
                                            android:layout_height="@dimen/dp_1"
                                            android:background="@color/gray_cccccc"
                                            android:layout_centerInParent="true"
                                            android:layout_marginTop="-10dp"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/num_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp_10"
                                    android:textSize="@dimen/font_11"
                                    android:textColor="@color/color_999999"
                                    android:text="@{model.commondityNum + `件`}"
                                    android:hint="件"
                                     />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                        <LinearLayout
                            android:id="@+id/content_bottom_btn_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:padding="@dimen/dp_5"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/gray_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/order_gray_bg"
                                android:layout_marginRight="@dimen/dp_15"
                                android:clickable="true"
                                android:textSize="@dimen/font_11"
                                android:gravity="center"
                                android:textColor="@color/gray_color_press"
                                android:text="查看详情"
                                android:hint="查看详情"/>
                            <TextView
                                android:id="@+id/red_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/order_red_bg"
                                android:textColor="@color/red_color_press"
                                android:clickable="true"
                                android:textSize="@dimen/font_11"
                                android:text="确认收货"
                                android:gravity="center"
                                android:hint="确认收货"/>
                        </LinearLayout>
                    </LinearLayout>

                <!--</android.support.v7.widget.CardView>-->
                <ImageView
                    android:id="@+id/line_last"
                    style="@style/horizontal_line"
                    android:layout_margin="@dimen/dp_5"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/nofile"
                app:defaultImg="@{R.mipmap.nofile}"
                app:loadImage="@{model.commondityImg}" />
        </FrameLayout>
    </LinearLayout>
</layout>