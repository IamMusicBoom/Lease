<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="isEdit"
            type="Boolean"/>
        <variable
            name="model"
            type="com.tylx.leasephone.model.CertificatesModel"/>
        <import type="com.tylx.leasephone.util.ProbjectUtil"/>
        <import type="android.text.TextUtils"/>
        <import type="com.tylx.leasephone.R"/>

    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/title_shadow"></include>
        <android.support.v7.widget.CardView
            android:id="@+id/me_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="-30dp"
            app:cardElevation="@dimen/dp_5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/au_real_name"
                    android:background="@drawable/white_onclick_shape"
                    android:clickable="@{isEdit}"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="真实姓名"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/au_real_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="请填写您的真实姓名"
                        android:text="@{model.memberName}"
                        android:textColorHint="@color/gray_cccccc"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/right_img"/>
                </LinearLayout>
                <ImageView
                    style="@style/horizontal_line"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>

                <LinearLayout
                    android:id="@+id/au_id_num"
                    android:background="@drawable/white_onclick_shape"
                    android:clickable="@{isEdit}"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="身份证号码"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/au_id_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="请填写您的身份证号码"
                        android:text="@{model.idCard}"
                        android:textColorHint="@color/gray_cccccc"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/right_img"/>
                </LinearLayout>
                <ImageView
                    style="@style/horizontal_line"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>

                <LinearLayout
                    android:id="@+id/au_id_end_time"
                    android:background="@drawable/white_onclick_shape"
                    android:clickable="@{isEdit}"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="身份证结束时间"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/au_id_end_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="请选则身份证结束时间"
                        android:text="@{ProbjectUtil.longToDateString(model.idCardValidEnd)}"
                        android:textColorHint="@color/gray_cccccc"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/right_img"/>
                </LinearLayout>
                <ImageView
                    style="@style/horizontal_line"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>

                <LinearLayout
                    android:id="@+id/au_student_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_onclick_shape"
                    android:clickable="@{isEdit}"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:id="@+id/au_stu_num_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="学生证号码"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:id="@+id/au_student_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="请填写您的学生证号码"
                        android:textColor="@color/black"
                        android:text="@{TextUtils.isEmpty(model.studentCard)? model.corporateName:model.studentCard}"
                        android:textColorHint="@color/gray_cccccc"
                        android:textSize="@dimen/font_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/right_img" />
                </LinearLayout>

                <ImageView
                    style="@style/horizontal_line"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>

                <LinearLayout
                    android:id="@+id/au_student_end_time"
                    android:background="@drawable/white_onclick_shape"
                    android:clickable="@{isEdit}"
                    android:onClick="onClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="学生证结束时间"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/au_student_end_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="请选择学生证结束时间"
                        android:text="@{ProbjectUtil.longToDateString(model.studentCardValidEnd)}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_cccccc"
                        android:textSize="@dimen/font_15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/right_img"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/au_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="@dimen/dp_15"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="公司地址"
                        android:textSize="@dimen/font_15"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/au_address_et"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@null"
                        android:enabled="@{isEdit}"
                        android:text="@{model.corporateAddress}"
                        android:layout_marginTop="@dimen/dp_15"
                        android:textSize="@dimen/font_15"
                        android:textColorHint="@color/gray_cccccc"
                        android:gravity="top"
                        android:hint="请填写公司详细地址"/>
                </LinearLayout>
                <ImageView
                    style="@style/horizontal_line"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>


                <ImageView
                    style="@style/horizontal_line"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="请上传实名认证资料"
                    android:padding="@dimen/dp_15"
                    android:textSize="@dimen/font_15"
                    android:textColor="@color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/au_file_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100">
                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_15"
                        android:onClick="onClick"
                        android:scaleType="centerCrop"
                        android:clickable="@{isEdit}"
                        app:loadImage="@{model.idCardPic}"
                        app:defaultImg="@{R.mipmap.add_camera}"
                        app:isShowBig="@{false}"
                        android:src="@mipmap/add_camera"/>
                        <ImageView
                            android:id="@+id/delete_1"
                            android:padding="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:visibility="gone"
                            android:src="@mipmap/delele"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100">
                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_15"
                        android:onClick="onClick"
                        android:scaleType="centerCrop"
                        android:clickable="@{isEdit}"
                        app:loadImage="@{model.personalPic}"
                        app:defaultImg="@{R.mipmap.add_jia}"
                        app:isShowBig="@{false}"
                        android:src="@mipmap/add_jia"
                         />
                        <ImageView
                            android:id="@+id/delete_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/dp_5"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:visibility="gone"
                            android:src="@mipmap/delele"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100">
                    <ImageView
                        android:id="@+id/img_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_15"
                        android:onClick="onClick"
                        android:clickable="@{isEdit}"
                        android:scaleType="centerCrop"
                        app:loadImage="@{model.studentPic}"
                        app:defaultImg="@{R.mipmap.add_jia}"
                        app:isShowBig="@{false}"
                        android:src="@mipmap/add_jia"/>
                        <ImageView
                            android:id="@+id/delete_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/dp_5"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:visibility="gone"
                            android:src="@mipmap/delele"/>
                    </RelativeLayout>
                </LinearLayout>
    </RelativeLayout>
                <TextView
                    android:id="@+id/au_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIPS:您需要上传一张手持身份证的正面照，一张手持学生证的正面照，以及一张无遮挡无虚化真实有效的免冠正面照。"
                    android:padding="@dimen/dp_15"
                    android:textSize="@dimen/font_15"
                    android:textColor="@color/gray_555555"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="示例："
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:textSize="@dimen/font_15"
                    android:textColor="@color/gray_555555"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:padding="@dimen/dp_15"
                        android:src="@mipmap/sample1"/>

                    <ImageView
                        android:id="@+id/au_sample2"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:padding="@dimen/dp_15"
                        android:src="@mipmap/sample2" />

                    <ImageView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:padding="@dimen/dp_15"
                        android:src="@mipmap/sample3"/>
                </LinearLayout>
                <Button
                    android:id="@+id/au_comit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:clickable="@{isEdit}"
                    android:onClick="onClick"
                    android:background="@drawable/button_defaut"
                    android:text="提交审核"
                    android:textColor="@color/white" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
</layout>