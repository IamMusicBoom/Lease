<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>

</data>

<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付详情"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/font_13"
        android:textColor="@color/grey_777777"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_15"/>
    <ImageView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_15"
        android:src="@mipmap/fk_cancel"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_30"
            android:textColor="@color/black"
            android:text="249.00"/>
        <TextView
            android:id="@+id/voucher_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="卡券抵扣"
            android:layout_marginLeft="@dimen/font_15"
            android:textSize="@dimen/font_15"
            android:textColor="@color/color_999999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="(优惠券)"
            android:textSize="@dimen/font_13"
            android:textColor="@color/color_999999"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/font_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/font_17"
            android:text="实付款："/>
        <TextView
            android:id="@+id/cur_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_30"
            android:text=""
            android:hint="实际付款"/>
    </RelativeLayout>
    <ImageView
        style="@style/horizontal_line"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择支付方式"
        android:textColor="@color/grey_777777"
        android:padding="@dimen/dp_15" />
    <LinearLayout
        android:id="@+id/weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weixin">
            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_15"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="@color/black_111111"
                    android:text="微信支付"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_15"
                    android:textColor="@color/color_999999"
                    android:text="微信5.0及以上版本用户使用"/>
            </LinearLayout>
        </LinearLayout>
        <CheckBox
            android:id="@+id/cb_wexin"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/shopping_checkbox"
            android:clickable="false"
            android:focusable="false"
            android:button="@null"
             />
    </LinearLayout>
    <ImageView
        style="@style/horizontal_line"
        android:layout_marginLeft="@dimen/dp_15"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_15"/>
    <LinearLayout
        android:id="@+id/zfb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zfb">
            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_15"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:textColor="@color/black_111111"
                    android:text="支付宝支付"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_15"
                    android:textColor="@color/color_999999"
                    android:text="推荐有支付宝账号的用户使用"/>
            </LinearLayout>
        </LinearLayout>
        <CheckBox
            android:id="@+id/cb_zfb"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_margin="@dimen/dp_10"
            android:clickable="false"
            android:focusable="false"
            android:background="@drawable/shopping_checkbox"
            android:button="@null"
            />
    </LinearLayout>
    <com.tylx.leasephone.view.MySubmitButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:onClick="onClick"
        app:content="提交订单"/>
</LinearLayout>
</layout>