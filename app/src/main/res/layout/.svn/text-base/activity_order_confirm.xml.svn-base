<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="addressModel"
            type="com.tylx.leasephone.model.AddressModel" />
        <variable
            name="goodModel"
            type="com.tylx.leasephone.model.GoodsModel"/>
        <variable
            name="commondityNormDetail"
            type="com.tylx.leasephone.model.CommondityNormDetail"/>
        <import type="com.tylx.leasephone.model.PrepareBuyModel"/>
        <import type="android.view.View"/>
        <import type="com.tylx.leasephone.R"/>
        <import type="com.tylx.leasephone.model.GoodsModel"/>
        <variable
            name="fromType"
            type="Integer"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_shadow"></include>
        <android.support.v7.widget.CardView
            android:id="@+id/me_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:layout_marginTop="-30dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="@dimen/dp_5"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/address_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_13"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="收货地址:" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/white_onclick_shape"
                    android:onClick="onClick"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_13"
                                android:textColor="@color/gray_555555"
                                android:hint="姓名"
                                android:text="@{addressModel.nickName}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:textSize="@dimen/font_13"
                                android:hint="电话"
                                android:textColor="@color/gray_555555"
                                android:text="@{addressModel.phone}" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_5"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_13"
                                android:hint="详细地址"
                                android:textColor="@color/gray_555555"
                                android:text="@{addressModel.address == null?``:addressModel.address + addressModel.addressDetail}" />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_15"
                        android:src="@mipmap/right_img"/>
                </LinearLayout>

                <ImageView
                    style="@style/horizontal_line"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{fromType == PrepareBuyModel.GOODS_DETAIL?View.VISIBLE:View.GONE}"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@mipmap/nofile"
                            app:loadImage="@{goodModel.listPic}"
                            app:defaultImg="@{R.mipmap.nofile}">
                        </ImageView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{goodModel.name}"
                                android:hint="产品名字"
                                android:textColor="@color/grey_222833"
                                android:textSize="@dimen/font_15" />
                            <TextView
                                android:id="@+id/style_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{GoodsModel.formateSpecifications(commondityNormDetail)}"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/font_8" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/now_tip"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="bottom"
                                        android:text="现价"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_10" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_999999"
                                    android:textSize="@dimen/font_11"
                                    android:padding="@dimen/dp_10"
                                    android:text="1件" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        style="@style/horizontal_line"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"/>

                    <LinearLayout
                        android:id="@+id/vouchercash_layout"
                        android:background="@drawable/white_onclick_shape"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="选择礼券"
                            android:textColor="@color/gray_555555"
                            android:textSize="@dimen/font_13" />

                        <TextView
                            android:id="@+id/voucher_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint=""
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:maxLength="15"
                            android:textSize="@dimen/font_13" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:src="@mipmap/right_img" />
                    </LinearLayout>
                    <ImageView
                        style="@style/horizontal_line"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--<ScrollView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="1"-->
                        <!--android:scrollbars="none"-->
                        <!--android:visibility="@{fromType == PrepareBuyModel.GOODS_DETAIL?View.GONE:View.VISIBLE}">-->


                    <!--<LinearLayout-->
                        <!--android:id="@+id/show_datas"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="vertical"-->
                        <!--&gt;-->
                    <!--</LinearLayout>-->
                    <!--</ScrollView>-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="@{fromType == PrepareBuyModel.GOODS_DETAIL?View.GONE:View.VISIBLE}"
                        android:orientation="vertical">
                    <android.support.v7.widget.RecyclerView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:divider="@null"
                    android:focusable="false"
                    android:layout_weight="1">
                    </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/gray_555555"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="合计："/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_cc0115"
                    android:textSize="@dimen/font_12"
                    android:text="￥"/>
                <TextView
                    android:id="@+id/total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_cc0115"
                    android:textSize="@dimen/font_22"
                    android:text="250"/>
            </LinearLayout>
            <Button
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_defaut"
                android:onClick="onClick"
                android:text="提交订单"
                android:visibility="gone"
                android:textColor="@color/white" />
            <com.tylx.leasephone.view.MySubmitButton
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                app:content="提交订单"/>
        </LinearLayout>



    </LinearLayout>
</layout>