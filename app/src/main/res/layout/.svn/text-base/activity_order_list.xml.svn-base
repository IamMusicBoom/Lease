<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height"
            android:background="@color/color_title"
            >
            <ImageView
                android:id="@+id/nav_bar_back"
                style="@style/nav_bar_back_style"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="onClick"
                android:src="@mipmap/back"
                />
            <RadioGroup
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginRight="@dimen/dp_100"
                android:background="@drawable/order_list_top_rp_bg"
                android:checkedButton="@+id/first_rb"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/first_rb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/order_list_top_left_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="租赁订单"
                    android:textColor="@color/order_list_top_text"
                    android:textSize="@dimen/font_12" />
                <RadioButton
                    android:id="@+id/second_rb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/order_list_top_right_selector"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="商城订单"
                    android:textColor="@color/order_list_top_text"
                    android:textSize="@dimen/font_12" />
            </RadioGroup>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/home_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </LinearLayout>
</layout>