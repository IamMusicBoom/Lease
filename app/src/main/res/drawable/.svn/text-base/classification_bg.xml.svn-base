<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <solid android:color="@color/grey_ededed"/>
    </shape>
</item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <padding android:bottom="@dimen/dp_15" android:top="@dimen/dp_15"
                android:left="@dimen/dp_15" android:right="@dimen/dp_15"/>
            <solid android:color="@color/line_gray_dddddd"/>
        </shape>
    </item>
</selector>