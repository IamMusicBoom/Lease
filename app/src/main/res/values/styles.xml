<resources>

    <!-- Base application theme. -->

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/line_gray_dddddd</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="navbar_stylew">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@color/color_title</item>
    </style>
    <style name="nav_bar_back_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        //TODO
        <item name="android:src">@mipmap/back</item>
    </style>
    <style name="my_bulider_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/touming_00000000</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <style name="dialoganimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_dialog_inanim</item>
        <item name="@android:windowExitAnimation">@anim/bottom_dialog_outanim</item>
    </style>

    <style name="progressBarStyleSmall" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">48.0dip</item>
        <item name="android:maxHeight">48.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar_interminate</item>
        <item name="android:minWidth">48.0dip</item>
        <item name="android:minHeight">48.0dip</item>
    </style>
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="colorPrimaryDark">@color/color_title</item>

    </style>
    <style name="title_shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:background">@color/color_title</item>
    </style>
    <style name="big_text">
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:textColor">@color/gray_cccccc</item>
    </style>
    <style name="small_text">
        <item name="android:textSize">@dimen/font_10</item>
        <item name="android:textColor">@color/gray_cccccc</item>
    </style>


    <style name="big_text2">
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="small_text2">
        <item name="android:textSize">@dimen/font_10</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="nocontent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTop">@mipmap/no_file</item>
        <item name="android:gravity">center</item>
        <item name="android:text">点击刷新</item>
        <item name="android:drawablePadding">@dimen/dp_5</item>
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>
    <style name="roomRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar_big</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:maxWidth">32dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/progress_tint_color</item>
        <item name="colorControlActivated">@color/progress_tint_color</item>
    </style>
</resources>
